//
// BIND9 Logging Configuration
// Generated by Ansible - DO NOT EDIT MANUALLY
//

logging {
    channel default_file {
        file "{{ bind_log_directory }}/default.log" versions 3 size 5m;
        severity {{ bind_log_level }};
        print-time yes;
        print-severity yes;
        print-category yes;
    };

    channel general_file {
        file "{{ bind_log_directory }}/general.log" versions 3 size 5m;
        severity {{ bind_log_level }};
        print-time yes;
        print-severity yes;
        print-category yes;
    };

{% if bind_log_queries %}
    channel queries_file {
        file "{{ bind_log_directory }}/queries.log" versions 5 size 20m;
        severity info;
        print-time yes;
        print-severity no;
        print-category no;
    };
{% endif %}

    channel security_file {
        file "{{ bind_log_directory }}/security.log" versions 3 size 5m;
        severity info;
        print-time yes;
        print-severity yes;
        print-category yes;
    };

    // Category assignments
    category default { default_file; };
    category general { general_file; };
    category database { general_file; };
    category security { security_file; };
    category config { general_file; };
    category resolver { general_file; };
    category xfer-in { general_file; };
    category xfer-out { general_file; };
    category notify { general_file; };
    category client { general_file; };
    category network { general_file; };
    category update { general_file; };
    category lame-servers { general_file; };

{% if bind_log_queries %}
    category queries { queries_file; };
{% endif %}
};