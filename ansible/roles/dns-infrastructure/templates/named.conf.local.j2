//
// BIND9 Local Zone Configuration
// Generated by Ansible - DO NOT EDIT MANUALLY
// Zone files are managed by dns-configuration role
//

// Local domain zone (will be populated by dns-configuration role)
zone "{{ bind_domain }}" {
    type master;
    file "/etc/bind/zones/{{ bind_domain }}";
    allow-query { trusted-networks; };
    allow-transfer { none; };
    allow-update { none; };
};

// Reverse DNS zones (will be populated by dns-configuration role)
zone "1.168.192.in-addr.arpa" {
    type master;
    file "/etc/bind/zones/reverse.1.168.192.in-addr.arpa";
    allow-query { trusted-networks; };
    allow-transfer { none; };
    allow-update { none; };
};