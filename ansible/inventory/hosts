# Container Platform Hosts
[docker_hosts]
# Uncomment and update IPs when deploying:
# docker-host-01 ansible_host=192.168.1.40
# docker-host-02 ansible_host=192.168.1.41

# Testing Environment (for development/testing)
[test]
# Add test VMs here for development:
test-ubuntu ansible_host=192.168.1.38

# Logical Service Groups
[core_infrastructure:children]
management
monitoring

[lab_services:children]
gns3
docker_hosts

# All production VMs
[production:children]
